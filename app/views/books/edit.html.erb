<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputBody">Opinion</label>
  <%= f.text_area :body, placeholder: "プロフィール画像", accept: "image/*" %>  
  <%= f.submit "Update Book" %>
<% end %>
