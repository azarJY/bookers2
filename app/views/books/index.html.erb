<%= render 'book', book: @book, user: @user %>

<h2>Books</h2>

<p>Title</p>
<p>Opinion</p>

<% @books.each do |book| %>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <%= link_to book_path(book.id) do %>
    <p><%= book.title %></p>
  <% end %>
  <p><%= book.body %></p>
</div>
<% end %>