<%= render 'books/book', book: @book, user: @user %>

<h2>Books</h2>
<p>Title</p>
<p>Opinion</p>

<% @books.each do |book| %>
  <%= link_to user_path(@user.id) do %>
    <%= image_tag @user.get_profile_image(100,100) %>
  <% end %>
  <%= link_to book_path(book.id) do %>
    <p><%= @book.title %></p>
  <% end %>
  <p><%= @book.body %></p>
  
<% end %>