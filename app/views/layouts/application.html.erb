<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/1f515556ad.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <%= link_to "Bookers", root_path, class:"navbar-brand" %>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to(books_path, class:'nav-link text-light') do %>
                    <strong><i class="fa-solid fa-house"></i><span> Home</span></strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to(users_path, class:'nav-link text-light') do %>
                    <strong><i class="fa-solid fa-users"></i><span> Users</span></strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to(books_path, class:'nav-link text-light') do %>
                    <strong><i class="fa-solid fa-book-open"></i><span> Books</span></strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to(destroy_user_session_path, method: :delete, class:'nav-link text-light') do %>
                    <strong><i class="fa-solid fa-right-from-bracket"></i><span> Log out</span></strong>
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to(root_path, class:'nav-link text-light') do %>
                    <strong><i class="fa-solid fa-house"></i><span> Home</span></strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to(about_path, class:'nav-link text-light') do %>
                    <strong><i class="fa-solid fa-link"></i><span> About</span></strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to(new_user_registration_path, class:'nav-link text-light') do %>
                    <strong><i class="fa-solid fa-user-plus"></i><span> Sign up</span></strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to(new_user_session_path, class:'nav-link text-light') do %>
                    <strong><i class="fa-solid fa-right-to-bracket"></i><span> Log in</span></strong>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div>
        <%= flash[:notice] %>
      </div>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
  	    <div class="row">
        	<div class="mx-auto">
        		<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
  </body>
</html>